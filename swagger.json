  "paths": {
    "/universities": {
      "post": {
        "tags": [
          "Universities"
        ],
        "summary": "Create a university.",
        "description": "Create a new university.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "alpha_two_code": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "web_pages": {
                    "type": "array"
                  },
                  "state-province": {
                    "type": "string"
                  },
                  "domains": {
                    "type": "array"
                  },
                  "country": {
                    "type": "string"
                  }
                },
                "example": {
                  "alpha_two_code": "BR",
                  "name": "Universidade 123",
                  "web_pages": [
                      "http://www.123.br/"
                  ],
                  "state-province": "Ceil√¢ndia",
                  "domains": [
                      "123.br"
                  ],
                  "country": "Brazil"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "get": {
        "tags": [
          "Universities"
        ],
        "summary": "List all universities",
        "description": "List all universities",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "University name.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "country",
            "in": "path",
            "description": "Country to search.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "path",
            "description": "Page number to display.",
            "required": false,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "nome": {
                        "type": "string"
                      },
                      "pais": {
                        "type": "string"
                      },
                      "estado": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
